@model List<SpotifySearchResult>

@if (Model.Count > 0) {
    <script>
        function likeSong(id) {
            $.get('?handler=AddSong&id=' + id, function (data) {

            });
            //$("#searchTable").remove();
            $("#searchTable").animate({maxHeight: "0px";}, 2000);


        }
    </script>
    <table class="table" id="searchTable">
        <thead>
            <tr class="">
                <th scope="col"></th>
                <th scope="col" width="75%" class="">Name</th>
                <th scope="col" width="15%" class="d-none d-sm-table-cell text-center">Length</th>
                <th scope="col" width="10%" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model) {
                <tr>
                    <td width="96"><img class="shadow"  style="border-radius: 3px;" src="@song.ImageUrl" height="64" width="64" /></td>
                    <td class="align-middle demo">
                        <div>
                            <span class="font-weight-bold">@song.Name</span>
                        </div>
                        <div>
                            <span>@song.Artists</span>
                        </div>
                    </td>
                    <td class="d-none d-sm-table-cell align-middle text-center">@song.Length</td>
                    <td class="align-middle text-center">
                        <button class="btn btn-sm btn-outline-success" onclick="likeSong('@song.Id'); return false;">Add</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>

} else {
    <h4 class="text-center mb-5 mt-3">No results.</h4>
}


